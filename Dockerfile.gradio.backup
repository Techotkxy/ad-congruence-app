FROM python:3.10-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    libsndfile1-dev \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy and install requirements IN STAGES to leverage caching
COPY requirements.txt .

# Install lightweight packages first (fast, cached layer)
RUN pip install --no-cache-dir numpy==1.24.3 pandas==2.2.2

# Install heavy ML packages separately (better caching)
RUN pip install --no-cache-dir \
    tensorflow==2.15.0 \
    tensorflow-hub==0.16.1

RUN pip install --no-cache-dir \
    torch==2.2.2 \
    torchvision==0.17.2

RUN pip install --no-cache-dir \
    transformers==4.44.2

# Install remaining packages
RUN pip install --no-cache-dir \
    gradio==4.44.0 \
    matplotlib==3.9.2 \
    librosa==0.10.2.post1 \
    soundfile==0.12.1 \
    numba==0.58.1 \
    llvmlite==0.41.1 \
    pillow==10.4.0 \
    protobuf==3.20.3 \
    requests==2.32.3

# Copy application files
COPY app.py .
COPY audio/ ./audio/
COPY visual/ ./visual/

# Set environment variables
ENV PORT=8080 \
    GRADIO_SERVER_NAME=0.0.0.0 \
    GRADIO_SERVER_PORT=8080 \
    PYTHONUNBUFFERED=1 \
    TRANSFORMERS_CACHE=/tmp/transformers_cache \
    TFHUB_CACHE_DIR=/tmp/tfhub_cache

EXPOSE 8080

CMD ["python", "app.py"]

